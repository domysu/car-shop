@page "/cars"
@attribute [StreamRendering]
@using AutomobiliuPardavimoPrograma.Services
@using AutomobiliuPardavimoPrograma.Models
@using Microsoft.EntityFrameworkCore
@inject AppDbContext Db
@inject CarService CarService
<PageTitle>cars</PageTitle>

<h1 class="bg-slate-200 rounded-md text-center">CARS</h1>

<p>This component demonstrates showing data.</p>

@if (automobiliai == null)
{
    <p>Kraunama...</p>
}
else if (!automobiliai.Any())
{
    <p>Duomenų nėra.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Markė</th>
                <th>Modelis</th>
                <th>Kaina (€)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var auto in automobiliai)
            {
                <tr>
                    <td>@auto.Id</td>
                    <td>@auto.Marke</td>
                    <td>@auto.Modelis</td>
                    <td>@auto.Kaina.ToString("F2")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Automobilis>? automobiliai;

    protected override async Task OnInitializedAsync()
    {
        automobiliai = await CarService.GautiVisusAsync();
    }
}
